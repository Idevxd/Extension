{
  "manifest_version": 3,
  "name": "Auto Clicker for Galxe",
  "version": "1.0",
  "description": "Automates tasks on Galxe.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.galxe.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Click to Start"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.galxe.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
